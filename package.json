{
  "name": "clarifai-vscode",
  "displayName": "clarifai-vscode",
  "description": "Clarifai extension for code search and manipulation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:clarifai-vscode.openWebview"
  ],
  "main": "./dist/extension.js",

  "contributes": {
  "configuration": {
      "type": "object",
      "title": "Clarifai Extension",
      "properties": {
        "clarifai-vscode.PAT": {
          "type": "string",
          "default": "",
          "description": "API token for accessing Clarifai API"
        },
        "clarifai-vscode.APP_ID": {
          "type": "string",
          "default": "",
          "description": "Application id in Clarifai"
        },
        "clarifai-vscode.USER_ID": {
          "type": "string",
          "default": "",
          "description": "User id in Clarifai"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clarifai-vscode-activitybar",
          "title": "Clarifai",
          "icon": "resources/clarifai-icon.svg"
        }
      ]
    },
    "views": {
      "clarifai-vscode-activitybar": [
        {
          "type": "webview",
					"id": "calicoColors.colorsView",

          "name": "Clarifai Sidebar",
          "icon": "resources/clarifai-icon.svg",
          "contextualTitle": "Clarifai Sidebar"
        }
      ]
		},
		"commands": [
			{
				"command": "calicoColors.addColor",
				"category": "Calico Colors",
				"title": "Add Color"
			},
			{
				"command": "calicoColors.clearColors",
				"category": "Calico Colors",
				"title": "Clear Colors",
				"icon": "$(clear-all)"
			},
			{
				"command": "clarifai.addImageToClarifai",
				"category": "Clarifai",
				"title": "Upload to Clarifai"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "calicoColors.clearColors",
					"group": "navigation",
					"when": "view == calicoColors.colorsView"
				}
			],
			"explorer/context": [
				{
					"command": "clarifai.addImageToClarifai",
					"group": "navigation",
					"when": "resourceExtname == .jpeg || resourceExtname == .jpg || resourceExtname == .png || resourceExtname == .gif || resourceExtname == .bmp"
				}
			]
		}
	},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
